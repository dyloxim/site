import State from "@IFS/process/state"
import FunctionSystem from "@IFS/functionSystem";
import I_Preset from "@IFS/types/I_preset";
import Color from "@IFS/display/color"

export default class Preset {
  initialState: State;
  functionSystem: FunctionSystem;
  displayParams: {
  initialDisplayRegion: {
    origin: number[],
    displayRadius: number
  }
  baseColor: Color;

  constructor(preset: I_Preset) {
    this.initialState = new State(preset.firstPoint);
    this.initialDisplayRegion = preset.initialDisplayRegion
    this.functionSystem = new FunctionSystem(preset.functionSystem)
    this.baseColor = preset.baseColor;
  }
}


